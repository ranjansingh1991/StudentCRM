<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <rotate
            android:fromDegrees="180"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="90">
            <shape
                android:shape="line"
                android:top="1dp">
                <stroke
                    android:width="2dp"
                    android:color="@android:color/background_light" />
                <corners android:radius="200dp" />
            </shape>
        </rotate>
    </item>
    <item android:top="22dp">
        <rotate
            android:fromDegrees="180"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="90">
            <shape android:shape="rectangle">
                <solid android:color="@color/colorHomeBGList" />
            </shape>
        </rotate>
    </item>
</layer-list>
